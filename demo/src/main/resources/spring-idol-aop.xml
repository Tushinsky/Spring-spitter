    <bean id="mindMagician" class="com.example.demo.domain.MindMagician"/>
    <bean id="volunteer" class="com.example.demo.domain.Volunteer"/>
    <bean id="criticismEngine" class="com.example.demo.springidol.CriticismEngineImpl">
        <property name="criticismPool">
            <list>
                <value>I'm not being rude, but let was appaling.</value>
                <value>You may be least talented person in this show.</value>
                <value>Do everyone a favor and keep your day job.</value>
            </list>
        </property>
    </bean>
    <bean class="com.example.demo.domain.JudgeAspect" factory-method="aspectOf">
        <property name="criticismEngine" ref="criticismEngine"/>
    </bean>
</beans>